  <% end %> -->

    <% @domains.each do |topic| %>
  <input class= "checkbox inline"  type="checkbox" name="expert[]" value="<%= topic.id %>"> <%= topic.name %> <br>
  <% end %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>