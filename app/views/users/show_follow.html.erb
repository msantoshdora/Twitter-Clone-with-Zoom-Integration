<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view profile", @user %></span>
      <% if @user.mentor? %>
        <span><b>posts:</b> <%= @user.microposts.count %></span>
      <% end %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
       <table class="table">
           <thead>
               <th scope="col"> Mentor</th>
               <th scope="col">Profile</th>
            </thead>
          <tbody>
               <%= render @users %>
          </tbody>
      </table>
      <%= will_paginate %>
    <% else %>
      <p> None </p>
    <% end %>
  </div>
</div>