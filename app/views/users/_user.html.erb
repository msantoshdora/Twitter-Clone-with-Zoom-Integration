<tr>
      <td>  <%= gravatar_for user, size: 50 %><%= user.name %></td>
      <td><%= link_to user.name, user %>  <% if logged_in? && current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %></td>
</tr>